{% extends 'base.html.twig' %}

{% block title %}Les différents groupes{% endblock %}

{% block body %}
    <div class="container">
        <a class="btn btn-success" href="{{ path('app_group_new') }}" style="margin: 2% 0">Créer un nouveau
            groupe</a>
        <h1>Les différents groupes disponibles</h1>
        <div class="row">
            {% for group in groups %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ group.name }}</h5>
                        <p class="card-text">{{ group.description }}</p>
                        <a href="{{ path('app_group_show', {'id': group.id}) }}" class="btn btn-primary">Open the
                            group</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
