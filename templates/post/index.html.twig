{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <div class="container">
        <a class="btn btn-success" href="{{ path('app_post_create') }}" style="margin: 2% 0">Cr√©er un nouveau
            post</a>
        <div class="row">
            {% for post in posts %}
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ vich_uploader_asset(post) }}" class="card-img-top" alt="{{ post.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.name }}</h5>
                            <p class="card-text">{{ post.content|length > 50 ? post.content|striptags|slice(0, 50) ~ '...' : post.content | raw }}</p>
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-primary">En savoir
                                plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
